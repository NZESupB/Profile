mixin: # object
  dns:
    enable: true
     # listen: 0.0.0.0:53 #若使用Tap模式则取消此行注释(建议不用)
    enhanced-mode: fake-ip
    #default-nameserver:
      #- 114.114.114.114
    # DNS搜索 : https://kb.adguard.com/zh/general/dns-providers
    nameserver:
      - https://doh.pub/dns-query #腾讯doh
      - https://doh.dns.sb/dns-query #dnssb-doh
    #建议不使用fallback,nameserver配置一个无污染的加密dns即可
    fallback:
      - tls://dns.google #Google-dot
      - tls://dot.sb:853 #dnssb-dot
    fake-ip-filter:
      - +.*
  tun:
    enable: true
    stack: system # system gvisor (Windows启用system需要手动放行防火墙)
    dns-hijack:
      - any:53
    auto-route: true
    auto-detect-interface: true
